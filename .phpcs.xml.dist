<?xml version="1.0"?>
<ruleset name="WordPress Coding Standards for Axytos Plugin">
	<description>WordPress coding standards for Axytos WooCommerce plugin.</description>

	<!-- What to scan -->
	<file>.</file>
	<exclude-pattern>/vendor/</exclude-pattern>
	<exclude-pattern>/node_modules/</exclude-pattern>

	<!-- How to scan -->
	<arg value="sp"/> <!-- Show sniff and progress -->
	<arg name="basepath" value="./"/><!-- Strip the file paths down to the relevant bit -->
	<arg name="colors"/>
	<arg name="extensions" value="php"/>
	<arg name="parallel" value="8"/><!-- Enables parallel processing when available for faster results. -->

	<!-- Rules: WordPress Coding Standards -->
	<config name="minimum_supported_wp_version" value="4.6"/>
	<rule ref="WordPress"/>
	
	<rule ref="WordPress.NamingConventions.PrefixAllGlobals">
		<properties>
			<property name="prefixes" type="array">
				<element value="axytos"/>
				<element value="Axytos"/>
			</property>
		</properties>
	</rule>
	
	<rule ref="WordPress.WP.I18n">
		<properties>
			<property name="text_domain" type="array">
				<element value="axytos-wc"/>
			</property>
		</properties>
	</rule>
	
	<rule ref="WordPress.WhiteSpace.ControlStructureSpacing">
		<properties>
			<property name="blank_line_check" value="true"/>
		</properties>
	</rule>
	
	<!-- Exclude admin.php from certain formatting rules that break JavaScript strings -->
	<rule ref="WordPress.Arrays.MultipleStatementAlignment">
		<exclude-pattern>includes/admin.php</exclude-pattern>
	</rule>
	<rule ref="WordPress.WhiteSpace.OperatorSpacing">
		<exclude-pattern>includes/admin.php</exclude-pattern>
	</rule>
</ruleset>
